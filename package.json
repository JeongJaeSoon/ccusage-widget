{
  "name": "ccusage-widget",
  "version": "1.0.0",
  "description": "A macOS widget for displaying Claude Code usage statistics",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/*.html dist/ && cp -r src/styles dist/",
    "dist": "electron-builder",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["electron", "macos", "widget", "claude", "ccusage"],
  "author": "CCUsage Widget",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ccusage": "latest"
  },
  "build": {
    "appId": "com.ccusage.widget",
    "productName": "CCUsage Widget",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    }
  }
}